<div class="row">
	<div class="col-12">
		<h2>Welcome <%= @user.first_name %> create a new post</h2>

		<%= form_for [@user, @post], html: {id: "new_post"} do |f| %>
				<%= f.label :title%><br>
			    <%= f.text_field :title %><br>
			   	<%= f.label :body%><br>
			    <%= f.text_area :body, id: 'new_post_body' %><br><br>
				<%= f.submit "Submit", class: 'btn btn-outline-secondary collapsed' %>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-12">	
		<ul id="user_posts" reversed> 
			<% @posts.order('created_at DESC').take(5).each do |p| %>
			<li><h3 style="display: inline;"><%= p.title %></h3>
				<p><%= p.body %></p>
			</li> 
			<% end %>
		</ul>
	</div>
</div>